<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Halaman Edit Data User</h2>
            <form action="/dataUser/updatedata/<%= userid %>" method="POST" >
                <div class="mb-3">
                  <label for="nama" class="form-label">Username</label>
                  <input type="text" class="form-control" id="nama" name="nama" placeholder="enter nama" value="<%= user.nama %>">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="enter password" value="<%= user.password %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="text" class="form-control" id="email" name="email" placeholder="enter email" value="<%= user.email %>">
                </div>
                <button  type="submit" class="btn btn-info rounded-pill btn-lg d-block mt-3">Update
                </button>
              </form>
        </div>
    </div>
</div>