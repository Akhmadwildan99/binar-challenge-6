<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Form Tambah Biodata User</h2>
            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-dark" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li> <%= error.msg %> </li>
                  <% }) %>
                </ul>
              </div>
          <% } %>
            <form method="POST" action="/biodata/add/<%= userid %>">
                <div class="mb-3">
                  <label for="nohp" class="form-label">Nomor Telepon</label>
                  <input type="text" class="form-control" id="nohp" name="nohp">
                </div>
                <div class="mb-3">
                  <label for="hobi" class="form-label">Hobi</label>
                  <input type="text" class="form-control" id="hobi" name="hobi">
                </div>
                <div class="mb-3">
                  <label for="alamat" class="form-label">Alamat</label>
                  <input type="text" class="form-control" id="alamat" name="alamat">
                </div>
                <button  type="submit" class="btn btn-info rounded-pill btn-lg d-block mt-3">Submit
                </button>
              </form>
        </div>
    </div>
</div>