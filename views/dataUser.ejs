<div class="container mt-3">
    <h2>Daftar User</h2>
    <% if (msg.length !== 0 ) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %> 
          </div>
    <% } %>
    <a href="/dataUser/tambah" class="btn btn-primary">Tambah Data User</a>
    <div class="row mt-3">
        <div class="col-md-6">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">emails</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Edit</th>
                </tr>
                </thead>
                <% if (users.length === 0) { %>
                    <tr>
                        <th colspan="5">
                            <div class="alert alert-danger" role="alert">
                                Data User masih kossong!
                            </div>
                        </th>
                    </tr>
                <% } %>
                <% users.forEach((user, i )=> { %>
                    <tbody>
                    <tr>
                        <th scope="row"><%= i + 1  %> </th>
                        <td><%= user.nama  %> </td>
                        <td><%= user.email %> </td>
                        <td><a href="/dataUser/delete/<%= user.id %>" type="button" class="badge badge-pill btn btn-info">hapus</a></td>
                        <td><a href="/dataUser/edit/<%= user.id %>" type="button" class="badge badge-pill btn btn-info">edit</a></td>
                    </tr>
                    </tbody>
                <% }) %>
            </table>
        </div>
    </div>
</div> 